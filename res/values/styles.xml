<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="LuasTheme" parent="@style/Theme.HoloEverywhereDark.Sherlock">
  </style>
  
  <style name="BlueLine">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">1sp</item>
    <item name="android:background">#33B5E5</item>
  </style>
  
  <style name="Fill">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Wrap">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Fill.Height" parent="@style/Fill">
    <item name="android:layout_width">wrap_content</item>
  </style>

  <style name="Fill.Width" parent="@style/Fill">
    <item name="android:layout_height">wrap_content</item>
  </style>
  
</resources>